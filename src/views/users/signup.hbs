<div class="row">
    <div class="col-md-4 mx-auto">
        <div class="card">
            <div class="card-header">
                Registro de Usuario
            </div>
             <img src="/img/register.png" class="mx-auto d-block m-4 register">
            <div class="card-body">
                <form action="/users/signUp" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name="name" placeholder="Ingresa tu nombre" value="{{name}}">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="email" name="email" placeholder="Ingresa tu Email" value="{{email}}">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" name="password" placeholder="Ingresa tu Password" value="{{password}}">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="password" name="confirmPassword"
                            placeholder="Confirme su Password">
                    </div>
                    <button type="submit" class="btn btn-primary btn-block">Registrarse</button>
                </form>
            </div>
        </div>
    </div>
</div>